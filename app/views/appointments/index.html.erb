<h1>List of available appointments </h1>

<table>
  <tr>
    <th>Patient's name</th>
    <th>Doctor's name</th>
    <th>Appointment Date</th>
    <th>Appointment Time</th>
    <th colspan="3">Action</th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.patient.first_name + ' ' + appointment.patient.last_name %></td>
    <td><%= appointment.hour.doctor.first_name + ' ' +  appointment.hour.doctor.last_name %></td>
    <td><%= appointment.hour.appointment_date%></td>
    <td><%= appointment.hour.appointment_time%></td>

    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Appointment', new_appointment_path %>
