<h1> Doctor's Specialisation available in Dublin Medical Centre</h1>
 <table>
  <tr>
   <th>Name</th>
    <th>Description</th>
    <th >Show</th>
     <% if current_user %>
      <% if current_user.admin %>
       <th colspan="2">Action</th>
       <% end %>
       <% end %>
       </tr>
       <% @specialisations.each do |specialisation| %>
       <tr>
        <td><%= specialisation.name %></td>
        <td><%= specialisation.description %></td>
        <td><%= link_to 'Show', specialisation %></td>
         <% if current_user %>
          <% if current_user.admin %>
         <td><%= link_to 'Edit', edit_specialisation_path(specialisation) %></td>
         <td><%= link_to 'Destroy', specialisation, method: :delete, data: {confirm: 'Are you sure?'} %></td>
           <% end %>
           <% end %>
        </tr>
        <% end %>
 </table>
<% if current_user %>
    <% if current_user.admin %>
        <%= link_to 'New Specialisation', new_specialisation_path %>
    <% end %>
<% end %>



